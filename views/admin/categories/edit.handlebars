<div class="row">
	<div class="col-sm-8">
		<h3>Edit Category</h3>


       <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
           <div class="form-group">
           	  <label>Name</label>
           	  <input type="text" value="{{category.name}}" name="name" placeholder="Enter Title" class="form-control" required="">
           </div>

           <button type="submit" class="btn-dark btn btn-block">Update Category</button>
       </form>
	</div>
